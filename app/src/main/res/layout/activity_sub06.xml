<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nuriapp.afterclean.Sub06Activity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/sub06_layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f0fafc">

        <TextView
            android:id="@+id/sub06_text01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제정보를 확인해주세요"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sub06_layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub06_layout01"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/sub06_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="청소 일시"/>

        <TextView
            android:id="@+id/sub06_text03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text02"
            android:layout_marginTop="5dp"
            android:text="청소 소요시간"/>

        <TextView
            android:id="@+id/sub06_text04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text03"
            android:layout_marginTop="5dp"
            android:text="청소 위치"/>

        <TextView
            android:id="@+id/sub06_text05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016년 04월 19일(화) 오후 04:00"
            android:textColor="@color/noticeColor"/>

        <TextView
            android:id="@+id/sub06_text06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text02"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:text="2시간 + 1시간"
            android:textColor="@color/noticeColor"/>

        <TextView
            android:id="@+id/sub06_text07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text03"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:text="서울특별시 영등포구 영등포로 11-1"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sub06_layout03"
        android:layout_below="@+id/sub06_layout02"
        android:layout_marginTop="-3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/sub06_text08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="방문청소"/>
        <TextView
            android:id="@+id/sub06_text09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text08"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="방문청소 주기"/>
        <TextView
            android:id="@+id/sub06_text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="25,000원"/>
        <TextView
            android:id="@+id/sub06_text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text10"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="1회만"/>
        <TextView
            android:id="@+id/sub06_text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text09"
            android:layout_marginTop="15dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="추가 선택 옵션"/>

        <ListView
            android:id="@+id/sub06_option_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/sub06_text12"
            android:layout_marginTop="15dp"
            android:background="@color/backgroundColor"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sub06_layout04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub06_layout03"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/sub06_text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="총결제금액: 36,000원"
            android:textColor="@color/noticeColor"/>
        <TextView
            android:id="@+id/sub06_text14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="이용 금액의 5%적립\n언제든지 현금처럼 사용가능\n친구추천시 이용하신 금액의 5% 적립혜택"
            android:textColor="@color/mainColor"/>
        <ImageView
            android:id="@+id/sub06_help_img"
            android:layout_width="50dp"
            android:src="@drawable/helper"
            android:layout_marginBottom="25sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_alignLeft="@+id/sub06_text16"
            android:layout_alignStart="@+id/sub06_text16"
            android:layout_below="@+id/sub06_text14"
            android:layout_alignBottom="@+id/sub06_text16" />
        <TextView
            android:id="@+id/sub06_text15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text14"
            android:layout_marginTop="40dp"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true"
            android:text="홍길동 도우미"
            android:textSize="20sp"
            android:textColor="@color/mainColor"/>
        <TextView
            android:id="@+id/sub06_text15_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                         님 \n방문예정입니다."
            android:textSize="15dp"
            android:lineSpacingExtra="10dp"
            android:layout_alignTop="@+id/sub06_text15"
            android:layout_alignLeft="@+id/sub06_text15"
            android:layout_alignStart="@+id/sub06_text15" />
        <TextView
            android:id="@+id/sub06_text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text15"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="*청소도구가 없다면 미리 구해주셔야 원활한 청소가 가능합니다.\n(걸래, 청소시, 걸래대, 변기솔, 세제 등)"
            android:textColor="@color/noticeColor"/>

        <CheckBox
            android:id="@+id/sub06_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub06_text16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="규정 확인"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n     애프터클린 콜센터 \n     1577-1868 \n      afterclean@hotmail.com \n     (주)이웃끼리 689-86-00336 \n     송재필 \n     경기도 김포시 봉화로 181번길 35, 상가동 지하B103 \n"
            android:id="@+id/sub07_text16"
            android:layout_below="@+id/sub06_pay"
            android:textSize="10dp"
            android:background="#F0F8FF"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/sub06_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="next_sub07"
            android:text="결제"
            android:background="@color/mainColor"
            android:textColor="#ffffff"
            android:layout_below="@+id/sub06_check"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>



    </RelativeLayout>
</ScrollView>