<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nuriapp.afterclean.Sub07Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sub07_layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f0fafc">

        <TextView
            android:id="@+id/sub07_text01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제내역을 확인해주세요"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/sub07_text02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/sub07_layout01"
        android:layout_marginTop="10dp"
        android:text="*청소도구가 없다면 미리 구해주셔야 원활한 청소가 가능합니다.\n(걸래, 청소시, 걸래대, 변기솔, 세제 등)"
        android:textColor="@color/noticeColor"/>

    <RelativeLayout
        android:id="@+id/sub07_layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub07_text02"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/sub07_text03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="청소 일시"/>
        <TextView
            android:id="@+id/sub07_text04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub07_text03"
            android:layout_marginTop="5dp"
            android:text="청소 소요시간"/>

        <TextView
            android:id="@+id/sub07_text05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016년 04월 01일(금) 오후 04:00 1회만"
            android:textColor="@color/noticeColor"/>
        <TextView
            android:id="@+id/sub07_text06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub07_text05"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:text="2시간 + 1시간"
            android:textColor="@color/noticeColor"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sub07_layout03"
        android:layout_below="@+id/sub07_layout02"
        android:layout_marginTop="-3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/sub07_text08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="방문청소"/>
        <TextView
            android:id="@+id/sub07_text09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub07_text08"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="방문청소 주기"/>
        <TextView
            android:id="@+id/sub07_text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="25,000원"/>
        <TextView
            android:id="@+id/sub07_text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub07_text10"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="1회만"/>
        <TextView
            android:id="@+id/sub07_text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub07_text09"
            android:layout_marginTop="15dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="추가 선택 옵션"/>

        <ListView
            android:id="@+id/sub07_option_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/sub07_text12"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sub07_layout04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub07_layout03"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/sub07_text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="총결제금액: 36,000원"
            android:textColor="@color/noticeColor"/>

        <ImageView
            android:id="@+id/sub07_help_img"
            android:src="@drawable/helper"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" />
        <TextView
            android:id="@+id/sub07_text15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub07_text13"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:text="홍길동 도우미 님 방문예정입니다."
            android:textColor="@color/mainColor"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/sub07_call"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bottomtext2"
        android:layout_below="@+id/sub07_layout04"
        android:layout_centerHorizontal="true"
       />

    <Button
        android:id="@+id/sub07_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub07_call"
        android:onClick="next_home"
        android:text="Home"
        android:background="@color/mainColor"
        android:textColor="#ffffff"/>


    </RelativeLayout>
</ScrollView>