<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/sub08_layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub08_layout01"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/sub08_help_img"
            android:src="@drawable/helper"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/sub08_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016년 4월 1일 오후 04:00 / 1회만"/>
        <TextView
            android:id="@+id/sub08_text03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub08_text02"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:text="2시간 + 1시간"/>
        <TextView
            android:id="@+id/sub08_text04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub08_text03"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:text="홍길동 도우미님"
            android:textColor="@color/mainColor"/>
        <TextView
            android:id="@+id/sub08_text05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub08_text04"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:text="36,000원"/>

        <TextView
            android:id="@+id/sub08_text06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub08_text04"
            android:layout_marginTop="22dp"
            android:layout_alignParentRight="true"
            android:text="1800 Point 적립"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub08_layout02"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f0fafc">

        <TextView
            android:id="@+id/sub08_text07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="청소가 마음에 드셨나요?"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub08_text07"
            android:id="@+id/sub08_star"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>