<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nuriapp.afterclean.Sub09Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sub08_layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f0fafc">

        <TextView
            android:id="@+id/sub08_text01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="애프터클린님의 청소내역입니다."/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sub09_layout01"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/sub07_text02"
        android:layout_marginTop="50dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/sub09_text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016년 04월 01일(금) 오후 04:00 1회만"
            android:textColor="@color/noticeColor"/>
        <TextView
            android:id="@+id/sub09_text02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2시간 + 1시간"
            android:textColor="@color/noticeColor"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/sub09_text01"
            android:layout_alignLeft="@+id/sub09_text03"
            android:layout_alignStart="@+id/sub09_text03" />
        <TextView
            android:id="@+id/sub09_text03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동 도우미 님"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="250dp"
            android:textColor="@color/mainColor"
            android:layout_below="@+id/sub07_text06"
            android:layout_alignRight="@+id/sub07_text05"
            android:layout_alignEnd="@+id/sub07_text05" />
        <TextView
            android:id="@+id/sub09_text04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:text="36,000원"
            android:textColor="@color/noticeColor"
            android:layout_below="@+id/sub09_text03"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/sub09_text05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="1800 Point 적립"
            android:textColor="@color/noticeColor"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/sub09_help_img"
            android:src="@drawable/helper"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sub09_layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="200dp"
        android:background="#f0fafc">

        <TextView
            android:id="@+id/sub09_text06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="청소가 마음에 드셨나요?"
            android:textColor="@color/noticeColor"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:rating="1"
            android:stepSize="1"
            android:layout_below="@+id/sub09_text06"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sub09_layout03"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_below="@+id/sub07_text02"
        android:layout_marginTop="300dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <ListView
            android:id="@+id/sub09_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
</ScrollView>